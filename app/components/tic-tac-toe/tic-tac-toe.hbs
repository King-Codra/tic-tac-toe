{{#if this.gameState.winner}}
  <WinnerModal::WinnerModal />
{{/if}}

<div class="nav flex-center-align">
  <LinkTo
    class="btn btn-secondary custom-btn flex-center-align"
    @route="index"
  >Home</LinkTo>
  <button
    class="btn btn-dark custom-btn flex-center-align"
    type="button"
    {{on "click" this.restartGame}}
  >Restart</button>
  <LinkTo
    class="btn btn-secondary custom-btn flex-center-align"
    @route="history"
  >History</LinkTo>
</div>

<div class="game-board">
  {{#each this.cells as |cell i|}}
    <div
      class="cell flex-center-align"
      {{on "click" (fn this.play i)}}
    >{{cell}}</div>
  {{/each}}

</div>

{{yield}}